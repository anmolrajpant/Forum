<!DOCTYPE HTML >
<html>
  <head>
    <title>
      My Form
    </title>
  </head>

  <body>
  <div id="page_cont">
    <p id="notice"><%= notice %></p>

    <h3>Listing Posts</h3>

    <table>
      <thead>
        <tr style="padding: 15px; ">
          <th style="padding: 5px;">Title</th>
          <th style="padding: 5px;">Comment</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <hr>

      <tbody>
        <% @posts.each do |post| %>
          <tr style="padding: 10px;">
            <td><%= post.title %></td>
            <td style="text-align: center;"><%= post.comment %></td>
          </tr>
          <tr>
            <td><%= link_to 'Show', post %> </td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Add comment', new_post_comment_path(post) %></td>
            <td><%= link_to 'View comment', post_comments_path(post) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div id="links">
      <%= link_to 'Create new post', new_post_path %>

    </div>
    </div>
  </body>
</html>